<%- layout('/layouts/boilerplate') %>
    <link rel="stylesheet" href="/css/allSpotsAdmin.css">
    <div class="container <%=!spots  ? 'divi' : '' %>">

        <% if(!spots.length){ %>
            <div class="container col-12 ">
                <h1 class="title d-flex justify-content-center">Nenhum spot por validar</h1>
            </div>

            <% } %>
                <div class="d-flex flex-column mb-5">
                    <% for(let spot of spots){ %>
                        <div class="d-flex flex-column border mainCont  mb-3">
                            <div class=" cont d-flex">
                                <div class="info">
                                    <h2>
                                        <%=spot.title %>
                                    </h2>
                                    <p>
                                        Cidade: <%=spot.city %>
                                    </p>
                                    <p>
                                        <%=spot.description %>
                                    </p>
                                    <p>
                                        <a href=" <%=spot.location %>">Localização</a>

                                    </p>

                                </div>
                                <div class="images">
                                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                                        <div class="carousel-inner">
                                            <% spot.images.forEach((spot, i)=>{ %>
                                                <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                                                    <img src="<%=spot.url%>" class="d-block carouselIMAGE" alt="...">
                                                </div>
                                                <% }) %>

                                        </div>
                                        <% if(spot.images.length> 1){ %>
                                            <button class="carousel-control-prev" type="button"
                                                data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden"></span>
                                            </button>
                                            <button class="carousel-control-next" type="button"
                                                data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden"></span>
                                            </button>
                                            <% } %>
                                    </div>

                                </div>

                            </div>
                            <div class="button d-flex ">
                                <form action="/spot/<%=spot._id %>/accept" method="POST"> <button
                                        class="btn btn-success mr-3">Validar Spot
                                    </button></form>

                                <form action=" /spot/<%=spot._id %>/deny?_method=DELETE" method="POST">
                                    <button class="btn btn-danger">Deletar Spot</button>
                                </form>

                            </div>
                        </div>
                        <% } %>
                </div>

    </div>
    </div>