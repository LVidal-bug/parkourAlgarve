<%- layout('/layouts/boilerplate') %>
    <link rel="stylesheet" href="/css/googleBTN.css">
    <div class="container cont col-lg-6 col-md-10 col-sm-12 my-5">
        <div class="container cont1 col-lg-8 col-md-8 col-sm-12 mb-5 border p-4">
            <h5 class=" title text-center mb-5 ">
                Entre com a sua conta Parkour Algarve
            </h5>
            <form action="/login" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Nome de usuário</label>
                    <input type="text" class="form-control" name='username' id="username"
                        placeholder="Digite o seu nome de usuário" required>
                    <div class="valid-feedback">
                        Parece Bem!
                    </div>
                </div>
                <div class="mb-3 d-flex flex-column">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="password"
                        placeholder="Digite a sua palavra-passe" required>
                    <div class="valid-feedback">
                        Parece Bem!
                    </div>
                    <a class="show mt-2 " href="/recoverPassword">Recuperar Palavra-Passe</a>
                </div>
                <div class="mt-3 ">
                    <button type="submit" class="fullWidth btn btn-primary ">Login</button>

                </div>



            </form>

            <hr class="mt-4">
            <p class="text-center mt-3">ou </p>
            <hr class="mb-4">
            <div class="row">
                <div class="col-md-12"> <a class="btn btn-lg btn-google btn-block  btn-outline googletext"
                        href="/auth/google"><img class="mr-2"
                            src="https://img.icons8.com/color/16/000000/google-logo.png"> Login com
                        Google</a> </div>
            </div> <br>
        </div>
    </div>
    <script src='/scripts/validateForm.js'></script>